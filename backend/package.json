{
  "name": "test-runner-platform",
  "version": "1.0.0",
  "description": "A comprehensive test automation platform with Playwright integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "db:setup": "bash setup-db.sh"
